<view class="tabs">
  <view class="tabs-title">
    <view wx:for="{{tabs}}"
          wx:key="id"
          class="title-item {{item.isActive ? 'active' : ''}}"
          bindtap="handleTitleItemTap"
          data-index="{{index}}">
      {{item.value}}
    </view>
  </view>
  <view class="tabs-content">
   <slot></slot>
  </view>
</view>