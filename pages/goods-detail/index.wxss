.detail-swiper swiper{
  height: 70vw;
  text-align: center;
}
.detail-swiper swiper image{
  width: 70%;
}
.goods-name{
  display: flex;
  padding: 20rpx 0rpx;
  padding-left: 20rpx;
  border-top: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
}
.goods-name-left{
  margin-right: 5rpx;
  font-size: 32rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-name .star{
  width: 180rpx;
  text-align: center;
  border-left: 2rpx solid #555;
  font-size: 28rpx;
}
.price{
  padding: 10rpx 20rpx;
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: 700;
}
.goods-detail{
  padding: 20rpx;
}
.goods-detail .title{
  font-size: 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #999;
  margin-bottom: 5rpx;
  color: var(--themeColor);
}

.btn-tool{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.tool-item{
  position: relative;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
}
.tool-item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  border: 2px solid red;
}
.btn-cat{
  flex: 2;
  background-color: #ffa500;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}
.btn-buy{
  flex: 2;
  background-color: var(--themeColor);
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
}